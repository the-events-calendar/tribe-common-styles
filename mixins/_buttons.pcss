/* -----------------------------------------------------------------------------
 * Button - Global
 * ----------------------------------------------------------------------------- */

@define-mixin button-global {
	border: 0;
	cursor: pointer;
	display: inline-block;
	height: auto;
	padding: 0;
	text-decoration: none;
	width: auto;
}

/* -----------------------------------------------------------------------------
 * Button - Solid
 * ----------------------------------------------------------------------------- */

@define-mixin button-solid {
	@mixin desktop-body-2-bold;
	@mixin button-global;

	color: var(--color-background);
	text-align: center;
	transition: var(--transition-background-color);
}

/* -----------------------------------------------------------------------------
 * Button - Rounded
 * ----------------------------------------------------------------------------- */

@define-mixin button-rounded {
	border-radius: 4px;
}

/* -----------------------------------------------------------------------------
 * Button - Border
 * ----------------------------------------------------------------------------- */

@define-mixin button-border {
	@mixin button-global;

	border: 1px solid var(--color-border-default);
	transition: var(--transition-color-border-color);

	&:active {
		border-color: var(--color-border-active);
	}
}

/* -----------------------------------------------------------------------------
 * Button - Icon Border
 * ----------------------------------------------------------------------------- */

@define-mixin button-icon-border {
	border: 1px solid var(--color-border-default);
	align-items: center;
	display: inline-flex;
	height: 56px;
	justify-content: center;
	transition: none;
	width: 56px;

	&:active {
		border-color: var(--color-border-active);
	}
}
